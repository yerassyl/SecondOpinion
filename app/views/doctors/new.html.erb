
<div class="row">
  <div class="large-offset-3 large-6 small-6 columns sub-nav">
    <%= link_to t('navigation.go_back'), doctors_path %>
  </div>
</div>

<div class="row">
  <div class="large-offset-3 large-6 columns form">
    <h3><%= t('register_doctor')%></h3>

    <%= form_for @doctor, authenticity_token: true do |f| %>
        <%= render 'layouts/error_messages', object: @doctor %>
        <%= render 'layouts/messages' %>
        <%= render 'layouts/text_field', obj: :name, form_label: t('personal_details.name'), form_builder: f, form_placeholder: t('dummy_placeholder.name') %>
        <%= render 'layouts/text_field', obj: :email, form_label: t('personal_details.email'), form_builder: f, form_placeholder: t('dummy_placeholder.email') %>
        <%= render 'layouts/text_field', obj: :address, form_label: t('personal_details.address'), form_builder: f, form_placeholder: t('dummy_placeholder.address') %>
        <%= render 'layouts/text_field', obj: :phone_number, form_label: t('personal_details.phone'), form_builder: f, form_placeholder: t('dummy_placeholder.phone') %>

        <%= f.label t('resume') %>
        <%= f.file_field :resume, accept: 'application/msword,application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document' %>
        <%= f.hidden_field :resume_cache %>

        <%= f.submit t('forms.submit'), class:'button tiny success' %>
    <% end %>

  </div>
</div>