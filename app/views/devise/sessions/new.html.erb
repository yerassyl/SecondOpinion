<% content_for :body_class, 'auth-bg' %>


<div class="login">
  <%= render 'layouts/messages' %>
  <div class="login-screen">

    <div class="app-title">
      <h1><%= t('forms.auth.login') %></h1>
    </div>

    <div class="login-form">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="control-group">
        <%= f.email_field :email, { autofocus: true, placeholder: t('forms.auth.email') }%>
      </div>

      <div class="control-group">
        <%= f.password_field :password, {autocomplete: 'off', placeholder: t('forms.auth.password') } %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="control-group">
          <%# f.check_box :remember_me %>
          <%# f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit t('forms.auth.login'), class:'btn btn-primary btn-large btn-block'%>
      </div>
    <% end %>
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>

